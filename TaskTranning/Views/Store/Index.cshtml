@model List<TaskTranning.ViewModels.StoreViewModel>
@using TaskTranning.Resources
@inject ResourcesServices Localizer
@{
    ViewBag.Title = Localizer.GetLocalizedHtmlString("t_store");
    Layout = "_NavbarDataTable";
}
    @if (TempData["succcessMessage"] != null)
    {
        <h5 class="text-danger text-center">@TempData["succcessMessage"]</h5>
    }
    <div class="sectionContent">
        <h3 class="text-center">@Localizer.GetLocalizedHtmlString("t_store")</h3>
        @if (ViewBag.Count == 0)
        {
            <p>@Localizer.GetLocalizedHtmlString("p_error_table") - <a asp-action="Create"><img src='~/image/create.png' width='35'/></a></p>
        }
        else
        {
            <p>@Localizer.GetLocalizedHtmlString("p_find"): @ViewBag.Count @Localizer.GetLocalizedHtmlString("p_store") - <a asp-action="Create"><img src='~/image/create.png' width='35'/></a></p>  
        }
        <table id="table_id" class="table table-bordered">
            <thead>
                <tr>
                    <th>@Localizer.GetLocalizedHtmlString("th_storeName")</th>
                    <th>@Localizer.GetLocalizedHtmlString("th_phone")</th>
                    <th>@Localizer.GetLocalizedHtmlString("th_email")</th>
                    <th>@Localizer.GetLocalizedHtmlString("th_street")</th>
                    <th>@Localizer.GetLocalizedHtmlString("th_city")</th>
                    <th>@Localizer.GetLocalizedHtmlString("th_state")</th>
                    <th>@Localizer.GetLocalizedHtmlString("th_zipCode")</th>
                    <th>@Localizer.GetLocalizedHtmlString("th_action")</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item  in Model)
            {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.StoreName)
                        </td >
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Phone)

                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.ZipCode)
                        </td>
                        <td scope="row" style="text-align: center">
                            <a asp-action="Edit" asp-route-id="@item.Id"><img src='~/image/edit.png' width='40'/></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('@Localizer.GetLocalizedHtmlString("msg_del")')">
                                <img src='~/image/delete.png'width='40'/>
                            </a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
