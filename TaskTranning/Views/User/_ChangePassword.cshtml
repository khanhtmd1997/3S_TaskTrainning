@model TaskTranning.ViewModels.EditPasswordUserViewModel
@using TaskTranning.Resources
@inject ResourcesServices Localizer
<div class="modal fade" id="edit-password" tabindex="-1" role="dialog" aria-labelledby="editPasswordLable" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPasswordLable">@Localizer.GetLocalizedHtmlString("t_edit")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="EditPassword" asp-controller="User" method="post">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
                    <div class="form-group">
                        <label asp-for="NewPassword">@Localizer.GetLocalizedHtmlString("lbl_newPassword")</label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("pld_newPassword")/>
                        <span asp-validation-for="NewPassword" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">@Localizer.GetLocalizedHtmlString("lbl_confirmPassword")</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder=@Localizer.GetLocalizedHtmlString("pld_confirmPassword")/>
                        <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer.GetLocalizedHtmlString("btn_close")</button>
                <button type="button" class="btn btn-primary" data-save="modal">@Localizer.GetLocalizedHtmlString("btn_save")</button>
            </div>
        </div>
    </div>
</div>