<body>
<div id="language">
    <div class="container-fluid">
        <div class="nav navbar-nav navbar-right"style="float: right">
            <span class="navbar-text">
                @await Html.PartialAsync("_Language")
            </span>
        </div>
    </div>
</div>
<div class="container">
        <div id="language">
            <div class="container-fluid">

            </div>
        </div>
        <header class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-default">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/image/phu-xuan.png" alt="Trường Đại học Phú Xuân" width="150"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navbarNavDropdown" class="navbar-collapse collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_home") <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <div class="user-profile">
                                <img class="avatar user-thumb" src="/image/avatar.png" alt="avatar">
                                <h4 class="user-name dropdown-toggle" data-toggle="dropdown">@Localizer.GetLocalizedHtmlString("h4_hello"): @Context.Session.GetString("fullname") <i class="fa fa-angle-down"></i></h4>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Logout" asp-controller="User">@Localizer.GetLocalizedHtmlString("a_logOut")</a>
                                </div>
                            </div>

                        </li>
                    </ul>
                </div>
            </nav>
        </header>
</div>
<div id="preloader">
    <div class="loader"></div>
</div>
<div class="page-container">
<div class="sidebar-menu">
            <div class="sidebar-header">
                <div class="logo">
                    <a asp-action="Index" asp-controller="Home"><img src="~/image/logo-3si.png"/></a>
                </div>
            </div>
            <div class="main-menu">
                <div class="menu-inner">
                    <nav>
                        <ul class="metismenu" id="menu">
                            <li class="active">
                                <a asp-controller="Home" asp-action="Index" aria-expanded="true"><i class="ti-layout-sidebar-left"></i>
                                    <span>
                                        @Localizer.GetLocalizedHtmlString("sp_home")
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a href="" aria-expanded="true"><i class="ti-user"></i>
                                    <span>
                                        @Localizer.GetLocalizedHtmlString("sp_management")
                                    </span>
                                </a>
                                <ul>
                                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_user")</a>
                                    <a class="nav-link" asp-area="" asp-controller="Store" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_store")</a>
                                    <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_customer")</a>
                                    <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_category")</a>
                                    <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_product")</a>
                                    <a class="nav-link" asp-area="" asp-controller="Brand" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_brand")</a>
                                    <a class="nav-link" asp-area="" asp-controller="Stock" asp-action="Index">@Localizer.GetLocalizedHtmlString("a_stock")</a>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="main-content">
            <!-- header area start -->
            <div class="header-area">
                <div class="row align-items-center">
                    <!-- nav and search button -->
                    <div class="col-md-6 col-sm-8 clearfix">
                        <div class="nav-btn pull-left">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
  @*                       <div class="search-box pull-left"> *@
  @* <form action="#"> *@
  @*     <input type="text" name="search" placeholder="Search..." required> *@
  @*     <i class="ti-search"></i> *@
  @* </form> *@
  @*                       </div> *@
                    </div>
                    <!-- profile info & task notification -->
                    <div class="col-md-6 col-sm-4 clearfix">
                        
                    </div>
                </div>
            </div>
            <div class="main-content-inner"  style="margin-top: 20px;">
                @RenderBody()
        </div>    
    </div>
</div>
</body>
